
<p id="notice"><%= notice %></p>


<h2>Order# <%=@order.id%></h2>
<br>
<strong>Order Items:</strong>
<table>
<%OrderItem.where(order_id: @order.id).find_each do |o|%>



<%Book.where(id: o.book_id).find do |b|%>
<tr><td>Book: <%=link_to b.title, b%></td></tr>
<tr><td>Book price: <%= b.price%></td></tr>
<%end%>
<tr><td>Quantity: <%=o.quantity%></td></tr>
<tr><td>Price: <%=o.price%></td></tr>
<tr><td><%= link_to 'Edit', edit_order_item_path(o)%></td></tr>
<tr><td><%= link_to 'Destroy', o, method: :delete, data: { confirm: 'Are you sure?' } %></td></tr>
<tr><td> </td></tr>
<%end%>
</table><br>
<p>
  <strong>Total price:</strong>
  <%= @order.total_price %>
</p>

