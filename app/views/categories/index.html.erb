<center>
<h1>Listing categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%=link_to category.title, category %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if signed_in?%>
<%if current_costumer.role_id == 1%>

  
<%=link_to 'New', new_category_path%>
<%end%>
<%end%>
</center>

