<h1>Listing billing_adresses</h1>

<table>
  <thead>
    <tr>
      <th>Adress</th>
      <th>Zipcode</th>
      <th>City</th>
      <th>Phone</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @billing_adresses.each do |billing_adress| %>
      <tr>
        <td><%= billing_adress.adress %></td>
        <td><%= billing_adress.zipcode %></td>
        <td><%= billing_adress.city %></td>
        <td><%= billing_adress.phone %></td>
        <td><%= billing_adress.country %></td>
        <td><%= link_to 'Show', billing_adress %></td>
        <td><%= link_to 'Edit', edit_billing_adress_path(billing_adress) %></td>
        <td><%= link_to 'Destroy', billing_adress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

