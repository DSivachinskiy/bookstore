%table.tab7{:align => "left"}
  %tr{:align => "center"}
    %td
      %h3= @book.title
  %tr{:height => "30px"}
    %td{:width => "200px", :height => "130px", :rowspan => "2"}= image_tag("#{@book.image}.png", height: 200)
    %td{:align => "left"}
      %h4
        = t :book_price
        \:
        = @book.price
    -unless current_order.present?
      %td
        =form_for(@order) do |f|
          .field
            = f.label :completed_date
            = f.date_select :completed_date
          .actions
            = f.submit 
    -else      
      = form_for(@order_item) do |oi|
        %td{:align => "right"}
          .field
            = oi.text_field :quantity        
        %td
          .actions.button2
          = oi.submit
  %tr
    %td{:colspan => "3"}= @book.description
%table{:width => "50%", :align => "left"}
  %tr
    %td{:width => "20%", :align=>"center"}
      %h4= t :reviews
    %td{:width => "30%"}= link_to "#{t :add_rating}", new_rating_path
  - @book.ratings.each do |rating|
    %tr
      %td{:align => "center"}
        = t :rating
        = rating.rating_number
      %td
        %strong= rating.title
      %td
        -if rating.costumer_id == current_costumer.id
          = link_to image_tag("cross.png", :height => "20"), rating, method: :delete, data: { confirm: 'Are you sure?' }
    %tr
      %td{:align => "center"}
        by
        = rating.costumer.firstname
        = rating.costumer.lastname
    %tr
      %td{:colspan => "3"}= rating.texxt_review
    %tr
      %td
        %br
   

