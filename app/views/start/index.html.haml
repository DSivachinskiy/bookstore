#myCarousel.carousel.slide.start{"data-ride" => "carousel"}
  / Wrapper for slides
  .carousel-inner{:role => "listbox"}
    .item.active
      %table
        %tr
          %td{:align => "center"}
            %h4= Book.first.title
          %td
            by
            = link_to "#{Book.first.author.firstname} #{Book.first.author.lastname}", author_path(Book.first.author)
        %tr
          %td{:height => "130px"}= image_tag("#{Book.first.image}.png", height: 100)
          %td= Book.first.description
    - Book.all.each do |book|
      -unless book == Book.first
        .item
          %table
            %tr
              %td{:align => "center"}
                %h4= book.title
              %td
                by
                = link_to "#{book.author.firstname} #{book.author.lastname}", author_path(book.author)
            %tr
              %td{:height => "130px"}= image_tag("#{book.image}.png", height: 100)
              %td= book.description

    %h4= t :welcome
  / Controls
  %a.left.carousel-control.start2{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
